<h1>Posts</h1>


<ul class="post-list">
  <% @posts.each do |post| %>
    <li>
      <%= link_to(post.title, post_path(post)) %> <br />
      <small>
        Posted <%= time_ago_in_words(post.created_at)  %> ago
      </small>
      |
      <small>
        Seen <%= pluralize(post.view_count, "time") %>
      </small>
    </li>
  <% end %>
</ul>