
<div class="cards">
  <% @posts.each do |post| %>
    <div class="card">
    <div class="card-body">
        
        <div>
        <%= link_to(post.title, post_path(post)) %> <br />
        <p><%=truncate(post.body)%></p>
        </div>
        
        <small>
            Posted <%= time_ago_in_words(post.created_at)  %> ago
        </small>
    
    </div>
    </div>
  <% end %>
</div>
