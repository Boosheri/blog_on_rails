<h3><%= @post.title %></h3>

<p><%= @post.body %></p>

<div>
  <small>
    Posted <%= time_ago_in_words(@post.created_at)  %> ago by <%=@post.user.name%>
  </small>

</div>

<div>
    <small>
      <% if can?(:crud, @post) %>
        <%= link_to "Edit", edit_post_path(@post), class: "btn btn-outline-primary" %>

    </small> 
    
    <small>
        <%= link_to(
        "Delete", post_path(@post), class: "btn btn-outline-primary" ,
        method: :delete,
        data: { confirm: "Are you sure?"}) %>
      <%end%>
    </small>
</div>

<section>
  <h1>Comments</h1>

  <%= form_with(model: [@post, @comment], local: true) do |f| %>
    <% if @comment.errors.present? %>
      <p class="form-errors">
        <%= @comment.errors.full_messages.join(", ") %>
      </p>
    <% end %>

    <div class="form-group">
      <%= f.text_area(
      :body, cols: 50, rows: 5,
      placeholder: "What's on your mind?",
      class: "form-control"
      ) %>
    </div>
    <%= f.submit "Submit", class: "btn btn-outline-primary" %>
  <% end %>

  
    <br>
  
      <% @comments.each do |comment| %>
      
          <p>
          <%= comment.body %> <br />
          <small>
            Commented <%= time_ago_in_words(comment.created_at) %> ago by <%=comment.user.name%>
          </small>
            <small>
              <% if can?(:crud, comment) %>
              <%= link_to(
              "Delete",
              post_comment_path(@post, comment),
              method: :delete, data: {
                confirm: "Are you sure?"
              }
              ) %>
              <%end%>
            </small>
        </p>

      <% end %>

</div>
